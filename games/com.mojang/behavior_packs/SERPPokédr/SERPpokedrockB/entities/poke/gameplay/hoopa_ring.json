{
  "format_version":"1.16.0",
  "minecraft:entity":{
    "description":{
      "identifier":"serp:hoopa_ring",
      "is_spawnable":false,
      "is_summonable":true,
      "is_experimental":false
    },
    "component_groups":{
    "serp:despawn":{"minecraft:transformation":{"into":"serp:despawn","delay":{"value":0.1}}},
    "serp:teleport":{"minecraft:teleport":{"random_teleports":true,"max_random_teleport_time":1,"random_teleport_cube":[8,8,8],"dark_teleport_chance":0.8,"light_teleport_chance":0.8}},
    "serp:normal":{
    "minecraft:scheduler":{
    "min_delay_secs":0,"max_delay_secs":0,
      "scheduled_events":[
{"filters":{"test":"distance_to_nearest_player","operator":">","value":6},"event":"serp:far"},
{"filters":{"test":"distance_to_nearest_player","operator":"<=","value":6},"event":"serp:near"}
        ]
      }
    }
  },
    "components":{
    "minecraft:type_family":{"family":["ring","inanimated"]},
    "minecraft:damage_sensor":{"triggers":[{"on_damage":{"filters":{"test":"has_damage","value":"fatal"}},"deals_damage":false}]},
    "minecraft:transformation":{"into":"serp:despawn","delay":{"value":180}},
    "minecraft:scale":{"value":1.5},
    "minecraft:collision_box":{"width":0.6,"height":1},
      "minecraft:custom_hit_test":{
        "hitboxes":[
{"width":0.6,"height":1,"pivot":[0,2,0]}
        ]
      },
    "minecraft:health":{"value":1},
    "minecraft:movement":{"value":0},
    "minecraft:behavior.float":{"priority":0},
		"minecraft:behavior.move_towards_restriction":{"priority":7},
    "minecraft:knockback_resistance":{"value":100},
	  "minecraft:physics":{"has_gravity":false},
    "minecraft:pushable":{"is_pushable":true,"is_pushable_by_piston":true}
    },
    "events":{
"minecraft:entity_spawned":{"add":{"component_groups":["serp:normal"]}},
"serp:near":{"add":{"component_groups":["serp:teleport"]}},
"serp:far":{"remove":{"component_groups":["serp:teleport"]}},
"serp:despawn":{"add":{"component_groups":["serp:despawn"]}}
    }
  }
}