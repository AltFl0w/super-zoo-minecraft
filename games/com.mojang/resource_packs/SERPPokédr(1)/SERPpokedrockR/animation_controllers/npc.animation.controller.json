{
  "format_version":"1.10.0",
  "animation_controllers":{
  "controller.animation.npc_root":{
  "initial_state":"root",
    "states":{
      "root":{
        "blend_transition":0.15,
        "blend_via_shortest_path":true,
        "transitions":[{"idle":"!query.is_saddled"},{"battle":"query.is_saddled"}]
      },
      "idle":{
	"animations":["humanoid_base_pose","bob","move"],
        "blend_transition":0.15,
        "blend_via_shortest_path":true,
        "transitions":[{"battle":"query.is_saddled"}]
      },
      "battle":{
	"animations":["battling"],
        "blend_transition":0.15,
        "blend_via_shortest_path":true,
        "transitions":[{"idle":"!query.is_saddled"}]
      }
    }
  },
  "controller.animation.npc_battle":{
    "states":{
      "pre":{
	"animations":["pre"],
        "blend_transition":0.15,
        "blend_via_shortest_path":true,
        "transitions":[{"battle":"query.skin_id==2"},{"lose":"query.skin_id==3"},{"end":"query.skin_id==4"},{"finish":"query.skin_id==5"}]
      },
      "battle":{
	"animations":["battle"],
        "blend_transition":0.15,
        "blend_via_shortest_path":true,
        "transitions":[{"pre":"query.skin_id==1"},{"lose":"query.skin_id==3"},{"end":"query.skin_id==4"},{"finish":"query.skin_id==5"}]
        },
      "lose":{
	"animations":["lose"],
        "blend_transition":0.15,
        "blend_via_shortest_path":true,
        "transitions":[{"pre":"query.skin_id==1"},{"battle":"query.skin_id==2"},{"end":"query.skin_id==4"},{"finish":"query.skin_id==5"}]
      },
      "end":{
	"animations":["end"],
        "blend_transition":0.15,
        "blend_via_shortest_path":true,
        "transitions":[{"pre":"query.skin_id==1"},{"battle":"query.skin_id==2"},{"lose":"query.skin_id==3"},{"finish":"query.skin_id==5"}]
      },
      "finish":{
	"animations":["finish"],
        "blend_transition":0.15,
        "blend_via_shortest_path":true,
        "transitions":[{"pre":"query.skin_id==1"},{"battle":"query.skin_id==2"},{"lose":"query.skin_id==3"},{"end":"query.skin_id==4"}]
        }
      }
    }
  }
}